map ,rt :call RunTestFile()<cr>
map ,rat :call SendToFIFO("clear ; make")<cr>

function! RunTestFile(...) " {{{
    " Run the tests for the previously-marked file.
    let in_test_file = match(expand("%"), '.spec.js$') != -1

    if in_test_file
        let t:current_test_file=@%
    elseif !exists("t:current_test_file")
        return
    end

    call SendToFIFO("clear ; mocha test/support/*.js " . t:current_test_file)
endfunction " }}}
